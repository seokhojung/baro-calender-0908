{
  "name": "baro-calendar",
  "version": "1.0.0",
  "description": "Baro Calendar Backend Server",
  "main": "src/server.js",
  "dependencies": {
    "@fastify/cors": "^11.1.0",
    "@fastify/jwt": "^10.0.0",
    "@fastify/swagger": "^9.5.1",
    "@fastify/swagger-ui": "^5.2.3",
    "bullmq": "^5.57.0",
    "dotenv": "^17.2.1",
    "fastify": "^5.5.0",
    "joi": "^18.0.0",
    "jsonwebtoken": "^9.0.2",
    "next": "^15.4.6",
    "pg": "^8.16.3",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "redis": "^5.8.1"
  },
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "dev:server": "nodemon src/server.js",
    "dev:client": "cd client && npm run dev",
    "dev:full": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:debug": "nodemon --inspect src/server.js",
    "pm2:install": "npm install -g pm2",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop ecosystem.config.js",
    "pm2:restart": "pm2 restart ecosystem.config.js",
    "pm2:delete": "pm2 delete ecosystem.config.js",
    "pm2:logs": "pm2 logs",
    "pm2:monit": "pm2 monit",
    "pm2:status": "pm2 status",
    "bg:server": "nohup npm run dev:server > logs/server.log 2>&1 &",
    "bg:client": "nohup npm run dev:client > logs/client.log 2>&1 &",
    "bg:full": "npm run bg:server && npm run bg:client",
    "bg:stop": "pkill -f 'nodemon src/server.js' && pkill -f 'next dev'",
    "bg:logs": "tail -f logs/*.log",
    "dev:docker": "docker-compose -f docker-compose.dev.yml up --build",
    "dev:docker:bg": "docker-compose -f docker-compose.dev.yml up -d --build",
    "build": "npm run build:client",
    "build:client": "cd client && npm run build",
    "install:all": "npm install && cd client && npm install",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "db:migrate": "node src/database/run-migrations.js",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.2.1",
    "@types/react": "19.1.10",
    "concurrently": "^9.2.0",
    "jest": "^30.0.5",
    "nodemon": "^3.1.10",
    "typescript": "^5.9.2",
    "winston": "^3.17.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": ["calendar", "api", "fastify", "postgresql"],
  "author": "Baro Calendar Team",
  "license": "MIT"
}
