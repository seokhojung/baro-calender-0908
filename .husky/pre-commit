#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸš¨ Running Pre-commit Quality Gates..."
echo "======================================"

# 1. Git Conflict Check
echo "1ï¸âƒ£ Checking for Git conflicts..."
CONFLICTS=$(git diff --cached --name-only | xargs grep -l "<<<<<<< HEAD\|=======" 2>/dev/null || true)

if [ ! -z "$CONFLICTS" ]; then
  echo "âŒ Git conflicts detected in:"
  echo "$CONFLICTS" | while read file; do
    echo "   - $file"
  done
  echo ""
  echo "âš ï¸  Please resolve conflicts before committing."
  exit 1
else
  echo "âœ… No Git conflicts found"
fi

# 2. API Contract Validation
echo "2ï¸âƒ£ Validating API contracts..."
API_FILES=$(git diff --cached --name-only | grep -E "src/api/.*\.js$" || true)

if [ ! -z "$API_FILES" ]; then
  echo "   Checking modified API files:"
  for file in $API_FILES; do
    echo "   - $file"
    
    # Check for required middleware
    if ! grep -q "ACLMiddleware" "$file"; then
      echo "   âš ï¸  Warning: $file missing ACL middleware"
    fi
    
    # Check for schema validation
    if ! grep -q "schema:" "$file"; then
      echo "   âš ï¸  Warning: $file missing schema validation"
    fi
  done
  echo "âœ… API contract check complete"
else
  echo "âœ… No API changes to validate"
fi

# 3. Database Migration Check
echo "3ï¸âƒ£ Checking database migrations..."
MIGRATION_FILES=$(git diff --cached --name-only | grep -E "migrations/.*\.js$" || true)

if [ ! -z "$MIGRATION_FILES" ]; then
  echo "   Validating migration files:"
  for file in $MIGRATION_FILES; do
    echo "   - $file"
    
    # Check for up() and rollback() functions
    if ! grep -q "async function up()" "$file"; then
      echo "âŒ Error: $file missing up() function"
      exit 1
    fi
    
    if ! grep -q "async function rollback()" "$file"; then
      echo "âŒ Error: $file missing rollback() function"
      exit 1
    fi
  done
  echo "âœ… Migration structure valid"
else
  echo "âœ… No migration changes"
fi

# 4. TypeScript Type Check (Frontend)
echo "4ï¸âƒ£ Checking TypeScript types..."
TS_FILES=$(git diff --cached --name-only | grep -E "\.(ts|tsx)$" || true)

if [ ! -z "$TS_FILES" ]; then
  if [ -f "tsconfig.json" ]; then
    npx tsc --noEmit 2>/dev/null
    if [ $? -eq 0 ]; then
      echo "âœ… TypeScript compilation successful"
    else
      echo "âŒ TypeScript compilation failed"
      echo "   Run 'npx tsc --noEmit' to see errors"
      exit 1
    fi
  fi
else
  echo "âœ… No TypeScript changes"
fi

# 5. Breaking Change Detection
echo "5ï¸âƒ£ Detecting breaking changes..."
BREAKING_PATTERNS="BREAKING CHANGE\|removed\|deleted\|deprecated"
BREAKING=$(git diff --cached | grep -i "$BREAKING_PATTERNS" || true)

if [ ! -z "$BREAKING" ]; then
  echo "âš ï¸  Potential breaking changes detected!"
  echo "   Please ensure:"
  echo "   - [ ] Frontend team is notified"
  echo "   - [ ] API version is bumped if needed"
  echo "   - [ ] Migration guide is provided"
  read -p "   Continue anyway? (y/N): " -n 1 -r
  echo
  if [[ ! $REPLY =~ ^[Yy]$ ]]; then
    exit 1
  fi
fi

echo ""
echo "======================================"
echo "âœ… All pre-commit checks passed!"
echo "======================================"

# Run existing pre-commit hooks if any
npm run lint 2>/dev/null || true

# Living Documentation ë™ê¸°í™”
echo "6ï¸âƒ£ Living Documentation ë™ê¸°í™”..."
if [ -f "docs/implementation-verification/automation-tools/pre-commit-doc-sync.js" ]; then
  node docs/implementation-verification/automation-tools/pre-commit-doc-sync.js
else
  echo "âš ï¸ Living Documentation ìŠ¤í¬ë¦½íŠ¸ë¥¼ ì°¾ì„ ìˆ˜ ì—†ìŠµë‹ˆë‹¤."
fi